{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "discord-bot",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc --watch",
		"dev": "concurrently pnpm:build:watch pnpm:start:watch",
		"lint": "eslint --ext .ts --fix",
		"lint:check": "eslint --ext .ts",
		"deploy": "node --require dotenv/config dist/util/deploy.js",
		"start": "node --require dotenv/config dist/index.js",
		"start:watch": "node --watch --require dotenv/config dist/index.js",
		"rebuild": "pnpm run build && pnpm run start",
		"redeploy": "pnpm run build && pnpm run deploy"
	},
	"dependencies": {
		"@discordjs/core": "^1.1.0",
		"@discordjs/rest": "^2.2.0",
		"better-sqlite3": "^9.4.5",
		"discord-api-types": "^0.37.79",
		"discord.js": "^14.14.0",
		"dotenv": "^16.3.1",
		"drizzle-orm": "^0.30.7"
	},
	"devDependencies": {
		"@sapphire/ts-config": "^5.0.0",
		"@types/node": "^18.18.8",
		"concurrently": "^8.2.2",
		"drizzle-kit": "^0.20.14",
		"eslint": "^8.53.0",
		"eslint-config-neon": "^0.1.57",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"prettier": "^3.2.5",
		"typescript": "^5.2.2"
	}
}
